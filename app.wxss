/**app.wxss**/
view,text,image,button {
  box-sizing: border-box;
}
page {
  font-family: -apple-system-font, 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;
  background-color: #ebebeb;
  display: flex;
  flex-direction: column;
}

/**消息提示组件样式**/

.message {
  width: 200rpx;
  height: 200rpx;
  position: fixed;
  z-index: 1000;
  left: 50%;
  top: 50%;
  margin-top: -100rpx;
  margin-left: -100rpx;
  background-color: rgba(0, 0, 0, 0.75);
  border-radius: 16rpx;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  animation: fadeIn 0.6s;
}

.message-image {
  height: 60rpx;
  width: 60rpx;
  margin-top: 20px;
}

.message-content {
  margin-top: 20rpx;
}

.message-mask {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

/**消息提示组件样式**/

.guide-mask {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.guide-add-to-desktop {
  position: relative;
  top: 0;
  right: -320rpx;
  width: 406rpx;
  height: 276rpx;
}

.guide-recent-read {
  position: relative;
  top: 150rpx;
  left: 100rpx;
  width: 426rpx;
  height: 224rpx;
}

.guide-close {
  position: absolute;
  bottom: 130rpx;
  margin-left: -111rpx;
  left: 50%;
  width: 222rpx;
  height: 110rpx;
}

::-webkit-scrollbar {
  display:none;
  width:0;
  height:0;
  color:transparent;
}
