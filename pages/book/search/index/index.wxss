.search-area {
  position: fixed;  
  width: 750rpx;
  height: 137rpx;
  line-height: 10%;
  z-index: 1000;
  background-color: #ffffff;
  top:0;
}

.search-txt {
  position: absolute;
  top: 36rpx;
  left: 39rpx;
  padding: 0 79rpx;
  width: 422rpx;
  height: 65rpx;
  background: #F3F3F3;
  border-radius: 33rpx;
