  color: #85909A;
}

.search-btn {
  position: absolute;
  top: 36rpx;
  right: 20rpx;
  font-size: 28rpx;
  line-height: 65rpx;
  text-align: center;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: #85909A;
  margin: 0;
  padding: 0;
  border: 0;
