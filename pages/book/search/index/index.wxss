}

.search-icon1 {
  position: absolute;
  top: 53rpx;
  left: 78rpx;
  height: 28rpx;
  width: 26rpx;
}

.icon-container {
  position: absolute;
  top: 15rpx;
  right: 146rpx;
  width: 60rpx;
  height: 60rpx;
}

.search-icon2 {
  position: absolute;
  top: 38rpx;
  right: 15rpx;
  height: 30rpx;
