.search-keyword-title {
  width:670rpx;
  margin:40rpx 0 10rpx 40rpx;
  line-height: 100%;
  position: relative;

  font-size: 28rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: #85909A;
}

.search-keyword-action {
  position: absolute;
  top: 0;
  right: 0;
  width: 90rpx;
  height: 35rpx;
}

.action-hover {
  opacity: 0.4;
}

.search-keyword-icon {
  position: absolute;
  top: 0;
  right: 55rpx;
  width: 26rpx;
  height: 26rpx;
  display: inline-block;
}
.search-keyword-cleartext {
  position: absolute;
  right: 0;
  font-size: 26rpx;
  display: inline-block;
  margin-left: 5rpx;
}
.search-keyword-item {
  display: inline-block;
  padding: 14rpx 29rpx;
  border: 1px solid #e4e4e4;
  border-radius: 45rpx;
  margin: 19rpx 15rpx 0;
  color: #454C56;
  font-size: 30rpx;
  background-color: #F3F4F8;
}

.search-no-data{
   position: relative;
   margin-top: 197rpx;
   display: flex;
   justify-content: center;  
}

.search-no-data-text{
  font-size: 26rpx;
  color: #C8C8C8;
  width: 750rpx;
  text-align: center;
  margin-top: 26rpx;
  margin-bottom: 26rpx;
}

.search-total-count-title{
  font-size: 28rpx;
  color: #85909A;  
  margin-left: 39rpx;
  margin-top: 20rpx;
}
.search-total-count{
  color: #FE8503;
}



.hot-search {
  color: #454C56;
}

.list {
  position: relative;
  margin-top: 50rpx;
  top:90rpx;
  z-index: 99;
}

.list-container {
  position: fixed;
  width: 750rpx;
  background: #fff;
  top: 137rpx;
  bottom:0;
}

/*common list*/

.list-item {
  position: relative;
  overflow: hidden;
  border-bottom: 2rpx solid #ebebeb;
  width: 690rpx;
  margin: 0 30rpx;
}

/*index list*/

.index-list-item {
  background: #fff;
  padding: 20rpx 0;
  overflow: hidden;
}

.index-list-item::active {
  background: #eee;
}


.index-list-item .cover image.cover-img {
  width: 136rpx;
  height: 180rpx;
}

.index-list-item .content {
  width: 500rpx;
  margin-left: 180rpx;
  height: 180rpx;
  border: 1rpx solid;
  overflow: hidden;
}

.index-list-item .title {
  overflow: hidden;
  font-size: 30rpx;
  font-weight: bold;
  color: #454C56;
}

.index-list-item .desc {
  font-size: 26rpx;
  color: #85909A;
  overflow: hidden;
  padding-top: 15rpx;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.index-list-item .words-classes {
   display: flex;
   padding-top: 10rpx;
   justify-content:space-between;
}

.index-list-item .words {
  font-size: 22rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: #85909A;
  line-height: 29rpx;
  display: flex;
}

.index-list-item .classes {
  font-size:18rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: #8F969C;
  line-height: 29rpx;
  border: 2rpx solid #C0C5C9;
  border-radius: 6rpx;
  display: flex;
  margin-right: 20rpx;
}


.content-bottom .class-item {
  /* width: 54rpx; */
  padding-right:10rpx;
  padding-left:10rpx;
  height: 29rpx;

  border-radius: 6rpx;
  font-size: 19rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: #8F969C;
  line-height: 29rpx;
  display: flex;
}






