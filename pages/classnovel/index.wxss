/* pages/classnovel/index.wxss */
page {
  background-color: #ffffff;
}

.pages {
  background: #ffffff;
}

.cate-header {
  margin-bottom: 46rpx;
}

.tostop {
  position: fixed;
  top: 0;
  z-index: 10rpx;
  background: #ffffff;
}

.cate-container {
  width: 710rpx;
  margin: 25rpx 0 8rpx 40rpx;
}

.cate-item {
  height: 66rpx;
  background: #EAEAEA;
  border: 2rpx solid rgba(234, 234, 234, 0.5);
  border-radius: 4rpx;
  font-size: 30rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: #454C56;
  line-height: 66rpx;
  display: inline-block;
  width: 151rpx;
  margin-top: 24rpx;
  margin-right: 20rpx;
}

.textcenter {
  justify-content: center;
  align-items: center;
  text-align: center;
}

.classselect {
  background: #FFF1E4;
  border-radius: 4rpx;
  color: #FE8503;
}

.cate-more {
  width: 750rpx;
  height: 54rpx;
  flex-flow: column;
  justify-content: center;
  flex-direction: row;
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}

.more-txt {
  font-size: 30rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: #565C64;
  line-height: 46rpx;
}

.cate-more image {
  width: 23rpx;
  height: 23rpx;
  margin-left: 11rpx;
}

.book-container {
  position: fixed;
  top: 0;
  bottom:110rpx;
  width: 100%;
  background: #ffffff;
}

