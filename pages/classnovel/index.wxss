.refresh-footer {
  text-align: center;
  position: relative;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: Center;
  height: 77rpx;
}

.nomore {
  color: #949BAD;
  font-size: 26rpx;
}

.refresh-footer text {
  line-height: 32rpx;
  font-size: 26rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: #949BAD;
  margin-left: 8rpx;
}

.refresh-footer image {
  width: 23rpx;
  height: 23rpx;
}

.toTop {
  position: fixed;
  bottom: 150rpx;
  right: 20rpx;
  height: 110rpx;
  width: 110rpx;
  border: 0rpx solid #fff;
  background: #fff;
  border-radius: 55rpx;
  opacity: 0.6;
  z-index: 99;
}

.toTopImage {
  height: 110rpx;
  width: 110rpx;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: #ffffff;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
